<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.deliveries">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.Deliveries"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.splash_activity.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection|locale"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.main_activity.MainActivity">

        </activity>
    </application>

</manifest>